# Paperless-ngx Service Configuration

# Timezone
TZ=America/New_York

# User/Group IDs for permissions
PUID=1000
PGID=1000

# Secret key (generate with: openssl rand -base64 32)
PAPERLESS_SECRET_KEY=change-me-to-random-string

# OCR language(s)
PAPERLESS_OCR_LANGUAGE=eng

# Consumption directory path
CONSUME_PATH=/path/to/consume

# Redis URL (uses internal redis by default)
PAPERLESS_REDIS=redis://paperless-redis:6379

# Database settings
PAPERLESS_DBHOST=paperless-db
PAPERLESS_DBNAME=paperless
PAPERLESS_DBUSER=paperless
PAPERLESS_DBPASS=paperless
